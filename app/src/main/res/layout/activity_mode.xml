<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ModeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MoveMate"
            android:fontFamily="@font/calibri"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:textColor="?attr/colorAccent"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/car2"/>

    </LinearLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/box2"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Estimated Amount"
        android:fontFamily="@font/calibri"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:fontFamily="@font/calibri"
            android:textColor="#00fa9a"
            android:textSize="27sp"/>

        <TextView
            android:id="@+id/amt_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/calibri"
            android:textColor="#00fa9a"
            android:textSize="27sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:textColor="#00fa9a"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This amount is estimated this will vary \n if you change your location or weight"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/calibri"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textSize="15sp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="#ff8c00"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAllCaps="false"
        android:fontFamily="@font/calibri"
        android:textColor="@color/white"
        android:text="Back to home"
        android:id="@+id/back_home"/>


</LinearLayout>